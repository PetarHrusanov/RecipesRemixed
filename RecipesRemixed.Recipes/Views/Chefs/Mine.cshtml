@using RecipesRemixed.Recipes
@model RecipesRemixed.Recipes.Models.Mine.MineOutputModel
@{
    this.ViewData["Title"] = Model.Chef.Name;
}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<div class="card-header">
    <h2>
        @Html.DisplayNameFor(model => model.Chef.Qualification)
    </h2>
    <p>
        @Model.Chef.Qualification
    </p>
    <h2>
        @Html.DisplayNameFor(model => model.Chef.Biography)
    </h2>
    <p>
        @Model.Chef.Biography
    </p>
</div>
<hr />
@if (Model.Recipes.Any())
{
    <ul class="list-group">
        <li class="list-group-item active">Recipes</li>
        @foreach (var recipe in Model.Recipes)
        {
            <li class="list-group-item">
                <a href="/Recipes/@recipe.Id">
                    @recipe.Name
                </a>
            </li>
        }
    </ul>
}
<hr />

@if (Model.RecipesRemixed.Any())
{
    <ul class="list-group">
        <li class="list-group-item active">RecipeRemixed</li>
        @foreach (var recipe in Model.RecipesRemixed)
        {
            <li class="list-group-item">
                <a href="/RecipesRemix/@recipe.Id">
                    @recipe.Name
                </a>
            </li>
        }
    </ul>
}
@if (Model.Posts.Any())
{
    <ul class="list-group">
        <li class="list-group-item active">RecipeRemixed</li>
        @foreach (var post in Model.Posts)
        {
            <li class="list-group-item">
                <a href="/Forum/@post.Id">
                    @post.Title
                </a>
            </li>
        }
    </ul>
}

