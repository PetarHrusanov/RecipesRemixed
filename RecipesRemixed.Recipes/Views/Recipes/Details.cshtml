@using RecipesRemixed.Recipes
@model RecipesRemixed.Recipes.Models.Recipes.RecipeOutputModel
@{
    this.ViewData["Title"] = Model.Name;
}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<div class="mb-3 row">
    <div class="col-md-3">
        <img class="mw-100" src="@this.Model.ImageUrl" alt="Max-width 100%">
    </div>
    <!--
    <div class="col-sm-4">@foreach (var item in Model.Ingredients)
    {

    }</div>
    -->
    <div class="col-sm-4">@Model.Ingredients.</div>
</div>
<div class="col-sm-4">@Model.Instructions.</div>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Calories</th>
                <th>Vegan</th>
                <th>Vegetarian</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Calories</td>
                @if (Model.Vegan)
                {
                    <td>Yes</td>
                }
                @if (!Model.Vegan)
                {
                    <td>No</td>
                }
                @if (Model.Vegetarian)
                {
                    <td>Yes</td>
                }
                @if (!Model.Vegetarian)
                {
                    <td>No</td>
                }
            </tr>
        </tbody>
    </table>
</div>
<div>
    <p>Made By @Model.ChefName</p>
</div>
@if(this.User != null)
{
    <div>
        <a asp-contoller ="RecipesRemix" asp-action="Create" asp-route-id="@Model.Id">Remix</a>
    </div>
}
